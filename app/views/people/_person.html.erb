
<div id="<%= dom_id person %>">
  <%= link_to person, class: "text-decoration-none" do %>
    <div style="padding:5px;" >
    <h4 style="color:black;" >
      <%= person.first_name%> 
      <% if person.middle_name %>
        <%= " " + person.middle_name + " "%>
      <% else %>
        <%= " " %>
      <% end %>
      <span style="font-weight:700"><%= person.last_name %></span>
      </h4>
    </div>
  <% end %>
  <hr/>
</div>
