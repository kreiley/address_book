<% if current_user %>
<div style="display:grid; grid-template-columns: max-content max-content auto;">
    <div class="btn">
        <%= link_to "View Contacts", people_path, class:"btn btn-dark"%>
    </div>
    <div class="btn">
        <%= link_to "Sign Out", sign_out_path, class:"btn btn-danger"%>
    </div>

<% else %>
<div style="display:grid; grid-template-columns: max-content max-content auto;">

    <div class="btn">
        <%= link_to "Register", register_path, class:"btn btn-primary"%>
    </div>
    <div class="btn">
        <%= link_to "Sign In", sign_in_path, class:"btn btn-success"%>
    </div>
<% end %>